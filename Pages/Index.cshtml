
@page
@using System
@model IndexModel
@{
    if (string.IsNullOrEmpty(TempData["username"] as string))
    {
        Response.Redirect("/login");
    }
    string username = (string)TempData["username"];
    ViewData["Title"] = "Home page";
}

<table class="table">
    <div class="row">
        <div class="col-md-4">
            <h2>Klantenoverzicht</h2>

            @if (String.IsNullOrEmpty(username))
            {
                <h3>Welkom, @username</h3>
            }
            else
            {
                Redirect("/login");
            }

        </div>
    </div>
</table>

<table class="table">
    <thead>
        <tr>
            <th>Klant</th>
            <th>Aantal Orders</th>
        </tr>
    </thead>
    @foreach (var c in Model.Customers)
    {        
        <tr>
            <td>@Html.DisplayName(c.Name)</td>
            <td>@Html.DisplayName(c.Orders.Count.ToString())</td>        
        </tr>
    }
</table>

<div class="container">
    <h2>Productenoverzicht</h2>
    <div class="row">
        @foreach (var p in Model.Products)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow-sm">
<img src="@(p.Image != null ? $"data:image/png;base64,{Convert.ToBase64String(p.Image)}" : "placeholder.png")" class="card-img-top" alt="...">
                    <div class="card-body d-flex flex-column justify-content-between">
                        <h5 class="card-title">@p.Name</h5>
                        <p class="card-text">
                            <span class="badge bg-primary fs-6">@p.Price.ToString("C", System.Globalization.CultureInfo.GetCultureInfo("nl-NL"))</span>
                        </p>
                    </div>
                    <div class="card-footer">
                        <form method="post" asp-page-handler="AddToCart">
                            <input type="hidden" name="productId" value="@p.Id" />
                            <button type="submit" class="btn btn-primary">Voeg toe aan winkelwagentje</button>
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
</div>