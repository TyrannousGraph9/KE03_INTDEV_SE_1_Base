
@page
@using System
@model IndexModel
@{
    if (string.IsNullOrEmpty(TempData["username"] as string))
    {
        Response.Redirect("/login");
    }
    TempData.Keep("username");
    string username = (string)TempData["username"];
    ViewData["Title"] = "Home page";
}

<div class="matrix-header text-center my-5">
    <h1 class="display-4 text-success matrix-glow">Welkom in de Matrix, @username!</h1>
    <h2 class="display-5 text-success matrix-glow-small">Matrix Inc. Webshop Portaal</h2>
</div>

<div class="container">
    <div class="row justify-content-center align-items-center mt-5">
        <div class="col-md-5 d-flex justify-content-end">
            <div class="card matrix-card shadow-lg w-100">
                <div class="card-body">
                    <h2 class="card-title">Producten bekijken</h2>
                    <p class="card-text text-light">Ontdek ons assortiment en bestel eenvoudig jouw favoriete producten.</p>
                    <a class="btn btn-success fw-bold px-4 py-2" asp-page="/productenoverzicht">Bekijk producten</a>
                </div>
            </div>
        </div>
        <div class="col-md-2 d-none d-md-block"></div>
        <div class="col-md-5 d-flex justify-content-start">
            <div class="card matrix-card shadow-lg w-100">
                <div class="card-body">
                    <h2 class="card-title">Bestellingen bekijken</h2>
                    <p class="card-text text-light">Bekijk hier jouw eerdere bestellingen en volg de status.</p>
                    <a class="btn btn-success fw-bold px-4 py-2" asp-page="/bestellingoverzicht">Bekijk bestellingen</a>
                </div>
            </div>
        </div>
    </div>
</div>